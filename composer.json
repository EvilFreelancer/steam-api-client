{
  "name": "evilfreelancer/steam-api-client",
  "type": "library",
  "description": "The SteamAPI PHP Client is a PHP library for interacting with the Steam API. It provides an easy way to fetch data from the Steam platform, such as user profiles, games, and reviews.",
  "keywords": [
    "http-client",
    "psr-4",
    "steam"
  ],
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "SteamApi\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SteamApi\\Tests\\": "./tests/"
    }
  },
  "authors": [
    {
      "name": "Paul Rock",
      "email": "paul@drteam.rocks",
      "homepage": "https://drteam.rocks/",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.5.1",
    "symfony/dom-crawler": "^6.0"
  },
  "require-dev": {
    "larapack/dd": "^1.1",
    "limedeck/phpunit-detailed-printer": "^5.0",
    "orchestra/testbench": "^4.0|^5.0",
    "phpunit/phpunit": "^9.6",
    "rector/rector": "^0.9",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist"
  },
  "scripts": {
    "test": "phpunit --coverage-clover clover.xml"
  }
}
